<%- include('header') %>

<% if (types_of_institutions.length === 0) { %>
    <div class="alert alert-info" role="alert">
        <p>There are no types of institutions to show, click <a href="/addTypeOfInstitution">here</a> to add a new type of institution.</p>    
    </div>
<% } else { %>
    <a href = "/addTypeOfInstitution" class = "btn btn-sm btn-primary"> Add Type of Institution </a><br/><br/>
    <table class = "table table-dark table-striped">
        <thead>
            <tr>
                <th> TIP_UST </th>
                <th> TIP_NAZIV </th>
            </tr>
        </thead>
        <tbody> 
            <% types_of_institutions.forEach(function(types_of_institutions) { %>
                <tr>
                    <td> <%= types_of_institutions.TIP_UST %> </td>
                    <td> <%= types_of_institutions.TIP_NAZIV</td>
                    <td> 
                        <a href = "editTypeOfInstitution/<%= types_of_institutions.TIP_UST%>" class = "btn btn-sm btn-primary"> Edit </a>
                        <a href = "deleteTypeOfInstitution/<%= types_of_institutions.TIP_UST%>" class = "btn btn-sm btn-danger"> Delete </a>
                    </td> 
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } %>

<%- include('footer') %>